<!DOCTYPE html>
<html lang="en">

{{> ../head }}

<body>
  <form>
    <fieldset>
      <legend>Choose your courses:</legend>
      <ul class="course-select">
        {{#departments}}
        <li class="department">
          <span class="department-heading">{{name}}</span>
          <ul class="department-courses">
            {{#courses}}
            <li>
              <label for="{{code}}-{{courseNumber}}" class="course">
                <input type="checkbox" name="courses" id="{{code}}-{{courseNumber}}" value="{{code}}-{{courseNumber}}">
                <div class="course-info">
                  <div class="course-title">{{title}}</div>
                  <div class="course-id">{{code}}-{{courseNumber}}</div>
                </div>
              </label>
            </li>
            {{/courses}}
          </ul>
        </li>
        {{/departments}}
      </ul>
    </fieldset>
  </form>
</body>

</html>